package com.niklas{	import flash.display.Sprite;	import flash.text.TextField;	import flash.text.TextFieldAutoSize;		public class DessineRectangle extends Sprite {				private var couleurEtat	:uint;		private var texteEtat	:String;		private var texteBTN	:TextField;		public function DessineRectangle(couleur:uint 		= 0,										 monLabel:String 	= "Bouton défaut" ) {											 			couleurEtat 					= couleur;			texteEtat 						= monLabel;			init();		}		private function init( ):void {			createMonLabel();			dessineRect();		}		private function createMonLabel():void {			texteBTN 						= new TextField ();			texteBTN.autoSize 				= TextFieldAutoSize.LEFT;			texteBTN.text 					= texteEtat;			texteBTN.x 						= 5;			texteBTN.y 						= 5;		}		private function dessineRect():void {			graphics.beginFill( couleurEtat);			graphics.drawRoundRect( 0, 0, texteBTN.width + 10, texteBTN.height + 10, 15, 15 );			graphics.endFill();			addChild( texteBTN );		}	}}