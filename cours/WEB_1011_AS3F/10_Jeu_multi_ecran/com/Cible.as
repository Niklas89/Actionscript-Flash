package com{	import flash.display.MovieClip;	import flash.events.MouseEvent;	import flash.events.Event;	public class Cible extends MovieClip {		private var vObjetParent,vPlateau:Object;		private var vVitesse,vPoint:uint;		public function Cible(pPlateau,pObjetParent:Object,pVitesse,pPoint:uint) {			var numFrame:uint	=	Math.ceil(Math.random()*this.totalFrames)						vPoint						=	pPoint + Math.round(numFrame/2);			vVitesse					= pVitesse;			vPlateau 					= pPlateau;			vObjetParent 				= pObjetParent;						this.gotoAndStop(numFrame);			this.addEventListener(MouseEvent.MOUSE_DOWN,onClickCible,false,0,true);			this.addEventListener(Event.ENTER_FRAME, descente,false,0,true);		}		private function onClickCible(e:MouseEvent):void {			this.removeEventListener(MouseEvent.MOUSE_DOWN,onClickCible);			this.removeEventListener(Event.ENTER_FRAME, descente);						vObjetParent.creerCible();			vPlateau.removeChild(this);			vObjetParent.addPoint(vPoint);		}		public function descente(e:Event):void {			this.y += vVitesse;						if (this.y > (stage.stageHeight+this.height)){				this.removeEventListener(MouseEvent.MOUSE_DOWN,onClickCible);				this.removeEventListener(Event.ENTER_FRAME, descente);				vObjetParent.addPoint(-vPoint);				vPlateau.removeChild(this);			}		}		public function kill(){			//this.removeEventListener(MouseEvent.MOUSE_DOWN,onClickCible);			//this.removeEventListener(Event.ENTER_FRAME, descente);			vPlateau.removeChild(this);		}	}}