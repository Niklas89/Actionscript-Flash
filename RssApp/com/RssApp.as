package com {		import flash.display.MovieClip;	import flash.net.URLLoader;	import flash.net.URLRequest;	import flash.events.Event;	import flash.events.MouseEvent;	import flash.events.TextEvent;	import flash.text.TextField;			public class RssApp extends MovieClip {				private var xml			:XMLList;		private var xmlImp		:XmlImport;		private var maxItem		:uint;				/*		url = 'http://feeds.feedburner.com/frandroid';				url = 'http://liberation.fr.feedsportal.com/c/32268/fe.ed/rss.liberation.fr/rss/9/'; 		url = 'http://www.lemonde.fr/rss/fil/0,57-0,64-1100142,0.xml'; 		url = 'http://feeds2.feedburner.com/LeJournalduGeek'; 		url = 'http://rss.feedsportal.com/c/499/f/413839/index.rss'; 		url = 'http://www.capital.fr/rss2/feed/fil-bourse.xml'; 		url = 'http://www.lefigaro.fr/rss/figaro_tauxetdevises.xml';*/				public function RssApp() {			xmlImp 		= new XmlImport(this,"http://feeds.feedburner.com/frandroid","retourXmlData");		}				public function retourXmlData(_data:XML):void		{			/*var i:uint*/			xml 				= _data.channel;			maxItem 			= xml.child("item").length();			titre_txt.text 		= xml.title;			description.text 	= xml.description;			date.text 			= xml.lastBuildDate;			for each(var temp:XML in xml..item){				// liste simple				mes_titres_txt.appendText(temp.title + "\n");				// lien HT interne avec param ==> num d'id de l'item				/*mes_titres_txt.htmlText += "<a href='event:"+i+"'>" + temp.title + "</a><br/>";				i++;*/			}			mes_titres_txt.addEventListener(MouseEvent.CLICK, detectLigne);			detectLigne();			// mes_titres_txt.addEventListener(TextEvent.LINK,detectLien);			// detectLien();		}		private function detectLigne(e:MouseEvent = null):void		{			var num:int = e ? e.currentTarget.getLineIndexAtPoint(e.currentTarget.mouseX,e.currentTarget.mouseY) : 0;			if (num >= 0 && num < maxItem){				afficheArticle(num);			}		}				private function detectLien(e:TextEvent = null):void		{			var num		:int  			= e ? Number(e.text) : 0;			afficheArticle(num);		}				private function  afficheArticle(n:int):void		{			var monXml	:XML			= xml..item[n];			titreEc.text				= monXml.title;			resume.htmlText				= monXml.description;			article.htmlText			= monXml.toString().split("<![CDATA[")[1].split("]]>")[0];		}	}	}