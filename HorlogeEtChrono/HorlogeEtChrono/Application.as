package  {		import flash.display.MovieClip;	import flash.display.StageAlign;	import com.niklas.Montre;	import flash.utils.Timer;	import flash.events.TimerEvent;	import flash.events.MouseEvent;	import flash.events.Event;		public class Application extends MovieClip {				private var m		:Montre;		private var t		:Timer;		private var i		:uint;		private var multiple:Boolean;				public function Application() {			// garde le point d'alignement de l'application en haut à gauche			// si la fenetre de l'application est agrandit			stage.align = StageAlign.TOP_LEFT;			// affiche toutes les 3 sec. une nouvelle montre si "alt" Clic sur la scene			stage.addEventListener(MouseEvent.CLICK,onClicStage);			// appel à l'affichage de la premiere montre independ du reglage timer			onTime();		}		private function onTime(e:TimerEvent = null):void		{			// apres 6 montre presente			// retire celle qui est en arriere plan			if (++i >= 6) this.removeChildAt(0);			// instanciation d'un objet montre			var r	:uint = Math.floor(Math.random()*50 + 50)			m 		= new Montre(r);			m.x 	= Math.floor(Math.random()*(stage.stageWidth-(r*2)) + r);			m.y		= Math.floor(Math.random()*(stage.stageHeight-(r*2)) + r);			this.addChild(m);		}		private function onClicStage(e:MouseEvent){			if (e.altKey && !multiple){				multiple 	= true;				t 			= new Timer(3000);				t.start();				t.addEventListener(TimerEvent.TIMER, onTime);				onTime();			}else if (e.altKey && multiple){				multiple 	= false;				i			= 1;				t.stop();				t			= null;				var _n:uint = this.numChildren;				while(--_n > 0){					this.removeChildAt(0);				}			}		}	}}