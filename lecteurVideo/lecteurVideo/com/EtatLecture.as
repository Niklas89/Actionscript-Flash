package com {		import flash.display.MovieClip;	import fl.video.FLVPlayback;	import fl.video.VideoEvent;		public class EtatLecture extends MovieClip {				private var util		:VideoUtils 	= new VideoUtils();		private var ecran		:FLVPlayback;				public function EtatLecture() {						ecran = util.chargeVideo("_flv/BLIS.flv",384,216,8,8);			addChild(ecran);						ecran.skin = "_skin/SkinOverAll.swf";			ecran.skinBackgroundColor = 0xAB99CB;						ecran.addEventListener(VideoEvent.PAUSED_STATE_ENTERED,pauseActivee);			ecran.addEventListener(VideoEvent.PLAYING_STATE_ENTERED,lectureActivee);		}				private function pauseActivee(evt:VideoEvent) {			messageInfo.text = "Pause";		}				private function lectureActivee(evt:VideoEvent) {			messageInfo.text = "";		}	}	}