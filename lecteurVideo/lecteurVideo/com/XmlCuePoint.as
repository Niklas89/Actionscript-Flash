package com {		import flash.display.MovieClip;		import fl.video.FLVPlayback;	import fl.video.MetadataEvent;		import flash.net.URLLoader;	import flash.net.URLRequest;		import flash.events.Event;		public class XmlCuePoint extends MovieClip {				private var ecran		:FLVPlayback;		private var donneesXML	:XML;		// Voici un exemple de script qui fait appel à un fichier XML lorsqu'un repère est atteint.				public function XmlCuePoint() {			ecran = VideoUtils.chargeVideo("_flv/BLIS.flv",384,216,8,8);			addChild(ecran);						ecran.autoPlay = false;						ecran.addASCuePoint(9,"0");			ecran.addASCuePoint(13,"1");			ecran.addASCuePoint(20,"2");						ecran.addEventListener(MetadataEvent.CUE_POINT,repereAtteint);						var chargeDonnees:URLLoader = new URLLoader();			chargeDonnees.load(new URLRequest("legende.xml"));			chargeDonnees.addEventListener(Event.COMPLETE,lancerLecture);		}		private function lancerLecture(_e:Event) {			// lance la video quand le XML est chargé			donneesXML = new XML(_e.target.data);			ecran.play();		}		private function repereAtteint(_e:MetadataEvent) {			messageInfo.text = donneesXML.soustitre.(@id == _e.info.name);		}	}	}