package com {		import flash.display.MovieClip;	import flash.events.MouseEvent;	import fl.video.FLVPlayback;	import fl.video.VideoState;	public class LecturePause extends MovieClip {		private var ecran:FLVPlayback;		public function LecturePause() {			ecran = new FLVPlayback();			ecran.source = "_flv/BLIS.flv";			ecran.setSize(384,216);			ecran.x = 8;			ecran.y = 8;			addChild(ecran);			boutonLecturePause.gotoAndStop(2);			boutonLecturePause.buttonMode = true			boutonLecturePause.addEventListener(MouseEvent.MOUSE_DOWN,lireVideo);		}		function lireVideo(evt:MouseEvent) {			if (ecran.state == VideoState.PLAYING) {				ecran.pause();				boutonLecturePause.gotoAndStop(1);			} else {				ecran.play();				boutonLecturePause.gotoAndStop(2);			}		}	}	}