package com {		import flash.display.MovieClip;	import fl.video.FLVPlayback;	import fl.video.VideoEvent;		public class VideoEnchaine extends MovieClip {				private var util		:VideoUtils = new VideoUtils();				private var listeFilms	:Array 		= ["_flv/ABL.flv","_flv/Center_Console.flv","_flv/Load_Securing_Net.flv"];		private var legendes	:Array 		= ["Système ABL","La console centrale","Sécurité"];		private var numeroFilm	:uint 		= 0;				private var ecran:FLVPlayback;		public function VideoEnchaine() {						ecran = util.chargeVideo(listeFilms[numeroFilm],384,216,8,8);			addChild(ecran);			legende.text = legendes[numeroFilm];						ecran.addEventListener(VideoEvent.COMPLETE,lectureTerminee);		}				private function lectureTerminee(_e:VideoEvent) {						if (numeroFilm < listeFilms.length-1) {				numeroFilm++;				ecran.source = listeFilms[numeroFilm];				legende.text = legendes[numeroFilm];			}		}	}	}