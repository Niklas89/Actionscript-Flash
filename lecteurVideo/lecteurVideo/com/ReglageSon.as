package com {		import flash.display.MovieClip;		import fl.video.FLVPlayback;	import fl.video.VideoEvent;		import flash.events.MouseEvent;		import flash.media.SoundTransform;		public class ReglageSon extends MovieClip {				private var util			:VideoUtils 	= new VideoUtils();		private var ecran			:FLVPlayback;		private var reglagesAudio	:SoundTransform;				public function ReglageSon() {			ecran = util.chargeVideo("_flv/Center_Console.flv",384,216,8,8);			addChild(ecran);						reglagesAudio				 	= ecran.soundTransform;						btMonterVolume_mc.buttonMode 	= true;			btBaisserVolume_mc.buttonMode 	= true;						btMonterVolume_mc.addEventListener(MouseEvent.MOUSE_DOWN,monterVolume);			btBaisserVolume_mc.addEventListener(MouseEvent.MOUSE_DOWN,baisserVolume);		}				private function monterVolume(evt:MouseEvent) {			// increment au pas de 10%			reglagesAudio.volume += 0.1;			// affectation			ecran.soundTransform = reglagesAudio;				}				private function baisserVolume(evt:MouseEvent) {			reglagesAudio.volume-= 0.1;			ecran.soundTransform = reglagesAudio;		}	}	}