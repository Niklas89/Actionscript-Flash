package com {		import flash.display.MovieClip;	import flash.events.MouseEvent;	import fl.video.FLVPlayback;		public class AjoutSkinControle extends MovieClip {				private var ecran:FLVPlayback;				public function AjoutSkinControle() {			ecran = new FLVPlayback();			addChild(ecran);				ecran.source = "_flv/BLIS.flv";						ecran.setSize(384,216);			ecran.x = 8;			ecran.y = 8;			boutonLecture.addEventListener(MouseEvent.MOUSE_DOWN,lireVideo);			boutonPause.addEventListener(MouseEvent.MOUSE_DOWN,mettreEnPause);		}		private function lireVideo(evt:MouseEvent) {			ecran.play();		}		private function mettreEnPause(evt:MouseEvent) {			ecran.pause();		}	}}